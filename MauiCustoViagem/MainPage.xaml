<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCustoViagem.MainPage"
             Title="Custo Viagem">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked_1" />
        <ToolbarItem Text="Ver Pedagios" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Origem:"/>
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino:"/>
            <Entry x:Name="txt_destino"/>

            <Label Text="Distancia:"/>
            <Entry x:Name="txt_distancia"/>

            <Label Text="Rendimento:"/>
            <Entry x:Name="txt_rendimento"/>

            <Label Text="Preço:"/>
            <Entry x:Name="txt_preco"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>